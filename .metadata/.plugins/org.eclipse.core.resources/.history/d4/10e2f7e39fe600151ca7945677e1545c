package priv.hkon.theseq.misc;

import priv.hkon.theseq.sprites.Sprite;

public class Sentence {
	
	public static final int TYPE_STATEMENT = 0;
	public static final int TYPE_QUESTION = 1;
	
	public static final int MEANING_NEGATIVE = 0;
	public static final int MEANING_NEUTRAL = 1;
	public static final int MEANING_POSITIVE = 2;
	
	public static final float[] meaningWeight = {-1.0f, 0.0f, 1.0f};
	
	Sprite object;
	Sprite subject;
	
	int meaning;
	
	Sentence(Sprite o, int meaning, Sprite s){
		object = o;
		subject = s;
		this.meaning = meaning;
	}
	
	public int getMeaning(){
		return meaning;
	}
	
	public Sprite getSubject(){
		return subject;
	}
	
	public Sprite getObject(){
		return object;
	}
	

}
