package priv.hkon.theseq.blocks;

import priv.hkon.theseq.sprites.Sprite;

public class Tree extends Plant {

	@Override
	public void makeData() {
		for(int i = H/2; i < H ; i++){
			for(int j = W/4; j < 3*W/4; j++){
				int d = Sprite.getRandomInt(j);
				int c = Sprite.RAND.nextInt(10);
				data[i][j] = Sprite.getColor(150 + c + d, 120 + c + d, 30);
			}
		}
		for(int i = 0; i < H/2; i++){
			for(int j = W/8; j < 7*W/8 ;j++){
				data[i][j] = Sprite.getColor(20, 200 - d, 20);
			}
		}

	}

}
